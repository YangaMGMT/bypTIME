:css
  body {
    background-color: black;
    padding: 20px 0;
  }
  nav { display: none; }
  .container { padding: 60px 0; }
- provide(:title, "Select Chapter")
.container
  .col-md-6.col-md-offset-3
    = simple_form_for :organization, url: '/switch_chapter', method: 'post', html:{ id: 'chapter-select', class: 'select' } do |f|
      = f.input :chapter, collection: Organization.all, prompt: 'Select your chapter', required: false, label: false, input_html:{ onchange: "$('#chapter-select.select').submit();"}
    = image_tag "byp100_logo.jpg", class: 'landing_page__logo img-responsive'
